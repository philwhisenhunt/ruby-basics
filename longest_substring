def length_of_longest_substring(s)
    #loop through until repeat
    #at repeat, stop and restart, but store how long the last run was

    # s = #s to array
    # s.each_with_index do |r, index|
    #     if r != s
    #         continue
    #     end
    # end

    now_array = s.split('')
    used_letters = []
    longest_so_far = []
    # print now_array

    now_array.each_with_index do |letter, index|
        if used_letters.include?(letter)
             longest_so_far #this needs to merge
             used_letters = []
        end

        #end by adding used letter to list
        longest_so_far << letter
        used_letters << letter
    end
    return longest_so_far.join("")
end

s = "abcabcbb"
s = "abcabcbbabcd"
puts length_of_longest_substring(s)