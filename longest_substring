def length_of_longest_substring(s)

    now_array = s.split('')
    used_letters = []
    longest_so_far = []
    # print now_array

    now_array.each_with_index do |letter, index|
        if used_letters.include?(letter)
             longest_so_far = []
             used_letters = []
        end

        #end by adding used letter to list
        longest_so_far << letter
        used_letters << letter

        # print longest_so_far
        # puts " "
        # print used_letters
        # puts "----------"
    end
    return longest_so_far.join("")
end

s = "abcabcbb"
# s = "abcabcbbabcd"
puts length_of_longest_substring(s)